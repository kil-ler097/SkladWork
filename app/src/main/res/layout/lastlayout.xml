<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:layout_weight="1"
    android:weightSum="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container2">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />

    <Button
        android:text="@string/add_sklad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addSklad"
        android:id="@+id/button8"
        android:layout_below="@+id/container"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:minWidth="88dp" />

    <Button
        android:text="@string/add_supplier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addSupplier"
        android:id="@+id/button4"
        android:layout_below="@+id/container"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:minWidth="88dp" />

    <Button
        android:text="@string/category_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="settingsCategory"
        android:id="@+id/button5" />

    <TextView
        android:text="@string/select_sklad"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:id="@+id/textView14" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
</ScrollView>